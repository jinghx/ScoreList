<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_back"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/linearlayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="150dp"
        android:orientation="vertical" >
    </RelativeLayout>

    <Button
        android:id="@+id/user_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:background="@drawable/btn_login"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="登    录"
        android:textColor="#7EC0EE"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/user_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/user_land"
        android:layout_alignLeft="@id/linearlayout01"
        android:layout_marginBottom="72dp"
        android:text="记住密码" />

    <EditText
        android:id="@+id/user_pwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/user_check"
        android:layout_alignLeft="@id/linearlayout01"
        android:layout_alignRight="@id/linearlayout01"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:ems="12"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textSize="20sp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/user_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/user_pwd"
        android:layout_alignLeft="@id/user_pwd"
        android:layout_alignRight="@id/user_pwd"
        android:ems="12"
        android:hint="请输入账号"
        android:textSize="20sp" />

</RelativeLayout>