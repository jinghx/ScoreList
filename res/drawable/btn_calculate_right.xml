<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:endColor="#00EEEE" android:startColor="#00EEEE" />

            <corners android:bottomRightRadius="25dp"  android:topRightRadius="25dp" />

            <padding android:bottom="5dp" android:left="15dp" android:right="30dp" android:top="5dp" />
        </shape></item>
    <item android:state_pressed="false"><shape>
            <gradient android:endColor="#B9D3EE" android:startColor="#B9D3EE" />

            <corners android:bottomRightRadius="25dp"  android:topRightRadius="25dp" />

            <padding android:bottom="5dp" android:left="15dp" android:right="30dp" android:top="5dp" />
        </shape></item>

</selector>